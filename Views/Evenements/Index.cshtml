@model IEnumerable<ProjetWeb3Bourse.Models.BourseEventViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>La liste des evenements</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Evenement.bourse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evenement.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evenement.heure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evenement.valeur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evenement.variation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.bourse.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.heure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.valeur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.variation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Evenement.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Evenement.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Evenement.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
